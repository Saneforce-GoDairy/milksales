<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Hap.DayReportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

              <include layout="@layout/custom_toolbar_help" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/top1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/C10dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_left"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/C5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day Report"
                    android:gravity="start"
                    android:layout_marginLeft="@dimen/C30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/primaryDark"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:id="@+id/date_container"
                    android:layout_width="120dp"
                    android:layout_height="30dp"

                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="@dimen/C12dp"
                    android:background="@drawable/date_curve_light_blue"
                    android:elevation="@dimen/C15dp"
                    android:gravity="center_horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txtdayDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:letterSpacing="0.09"
                        android:textColor="@color/Primary_blue"
                        android:text=""
                        android:textSize="13sp"
                        android:layout_toStartOf="@+id/iv_cal"
                        android:layout_marginEnd="@dimen/C5dp"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/iv_cal"
                        android:layout_width="@dimen/C20dp"
                        android:layout_height="@dimen/C20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/sfa_calendar"
                        app:tint="@color/Primary_blue" />
                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:text="TEAM"

                    android:textColor="@color/grey"
                    android:textSize="12sp" />

            </LinearLayout>


                <RelativeLayout
                    android:id="@+id/top2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/forword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_right"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/C20dp"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Team"
                        android:gravity="start"
                        android:textAlignment="viewStart"
                        android:layout_marginLeft="@dimen/C20dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primaryDark"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="13sp" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C2dp"
                    android:layout_marginRight="@dimen/C10dp"
                    android:layout_marginBottom="@dimen/C5dp"
                    android:background="#F3F2F2" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/C5dp"
                android:layout_marginRight="@dimen/C5dp"
                app:cardUseCompatPadding="true">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/row_report"
                        android:layout_width="match_parent"
                        android:background="@color/bg_light_blue"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Employee Name"
                                android:textSize="11sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Work Type"
                                android:paddingRight="2dp"

                                android:textSize="11sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/emp_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text=""
                                android:hint="Sale Rep Name"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/work_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:hint="Field Work"
                                android:paddingRight="2dp"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="Employee ID &amp; Designation"

                                android:textSize="11sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Submitted Time"
                                android:paddingRight="2dp"

                                android:textSize="11sp" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="2dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/emp_id_deg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text=""
                                android:hint="10210 &amp; Field Force"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                            <TextView
                                android:id="@+id/submit_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text=""
                                android:hint="06:00 pm"
                                android:paddingRight="2dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
