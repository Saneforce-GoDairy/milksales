                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"

                                    android:layout_marginTop="3dp"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text=""
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="Distributor"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1.1"
                                        android:gravity="center"
                                        android:text="Outlets"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text="Count"
                                        android:textColor="#92D8F3"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_weight="0.13"
                                        android:layout_marginTop="@dimen/C10dp"
                                        android:background="#F3F2F2" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text="Visited"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/visited_distributor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/visited_outlet"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1.1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.13"
                                    android:background="#F3F2F2" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:layout_marginBottom="@dimen/C5dp"
                                    android:background="@color/bg_light_blue"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text="Order Taken"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1.1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_weight="0.13"
                                    android:layout_marginTop="@dimen/C10dp"
                                    android:background="#F3F2F2" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text="Invoiced"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/count_distributor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/count_outlet"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1.1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text="Value"
                                        android:textColor="#92D8F3"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_weight="0.13"
                                        android:layout_marginTop="@dimen/C10dp"
                                        android:background="#F3F2F2" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:layout_marginStart="2dp"
                                    android:layout_marginEnd="2dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text="Ordered"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/ordered_distributor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/ordered_outlet"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1.1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_weight="0.13"
                                    android:layout_marginTop="@dimen/C10dp"
                                    android:background="#F3F2F2" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:background="@color/bg_light_blue"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="start"
                                        android:text="Invoiced"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/invoiced_distributor"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                    <TextView
                                        android:id="@+id/invoiced_outlet"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="left"
                                        android:layout_marginLeft="3dp"
                                        android:layout_weight="1.1"
                                        android:gravity="center"
                                        android:text=""
                                        android:hint="05"
                                        android:textStyle="bold"
                                        android:textSize="13sp" />
                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_weight="0.13"
                                    android:layout_marginTop="@dimen/C10dp"
                                    android:background="#F3F2F2" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dayreport_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/C5dp"
                android:layout_marginStart="@dimen/C5dp"
                android:layout_marginEnd="@dimen/C5dp"
                tools:listitem="@layout/item_day_report"/>


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/ellipse_summary">


        <ImageView
            android:id="@+id/iv_up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/C3dp"
            android:background="@drawable/three_up_arrow">

        </ImageView>
        <!--<ImageView

            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_double_up_arrow"
            android:id="@+id/iv_up_arrow"

            app:tint="@color/white" />-->
        <TextView
            android:id="@+id/tv_view_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_up_arrow"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="@dimen/C15dp"
            android:paddingEnd="@dimen/C15dp"
            android:text="View Summary"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>