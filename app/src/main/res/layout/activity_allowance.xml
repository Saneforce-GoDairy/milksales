<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.AllowanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/C5dp"
        android:layout_weight="1"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context=".Activity.AllowanceActivity">
        <RelativeLayout
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_btn_ios"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/C20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRAVEL PLAN"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/primaryDark"
                android:fontFamily="@font/roboto_medium"
                android:textSize="17sp"/>

        </RelativeLayout>

        <include
            android:visibility="gone"
            layout="@layout/custom_toolbar_help"></include>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/C5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/vwContStay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:paddingBottom="@dimen/C16dp">

                            <CheckBox
                                android:id="@+id/chkContStay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/C5dp"
                                android:text="Continue Stay" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mode_of_travel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/grey_600"
                            android:text="MODE OF TRAVEL"/>

                        <RelativeLayout
                            android:id="@+id/card_travel_mode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:layout_below="@+id/txt"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/txt_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/roboto_medium"
                                android:text="SELECT"/>

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:scaleX="-1"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/back_btn_ios"/>


                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="#CACACA" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey_600"
                                android:text="DAILY ALLOWANCE"
                                android:fontFamily="@font/roboto_medium"/>

                            <RelativeLayout
                                android:id="@+id/card_daily_allowance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="5dp">

                                <TextView
                                    android:id="@+id/text_daily_allowance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_centerVertical="true"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="SELECT"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:scaleX="-1"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/back_btn_ios"/>

                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.1dp"
                                android:background="#CACACA" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_check_driver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <CheckBox
                                android:id="@+id/da_driver_allowance"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/C10dp"
                                android:text="Driver Allowance">

                            </CheckBox>
                        </LinearLayout>
                    </LinearLayout>


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/travelLocationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/C20dp"
                        android:text="TRAVEL LOCATION"
                        android:fontFamily="@font/roboto_medium"/>

                    <LinearLayout
                        android:id="@+id/bus_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C20dp"
                        android:background="@drawable/travel_plan_grey_box"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txt_frm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/grey_600"
                                    android:text="FROM"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="15dp"
                                    android:layout_marginBottom="15dp"/>

                                <CheckBox
                                    android:visibility="gone"
                                    android:id="@+id/cbReturnHQ"
                                    style="@style/TextStyle"
                                    android:text="Return to HQ  "
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/cvFromPlace"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_frm"
                                >

                                <EditText
                                    android:id="@+id/edt_frm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="10dp"
                                    android:hint="Type Here..."
                                    android:layout_marginBottom="15dp"
                                    android:textAllCaps="false"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="13sp" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_to_place"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="37dp"
                                android:gravity="center_vertical">


                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:layout_centerVertical="true"
                                    android:background="#CACACA" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/from_to"
                                    android:layout_centerHorizontal="true"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvToLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/grey_600"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginTop="0dp"
                                    android:layout_marginBottom="15dp"
                                    android:text="TO"/>


                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tvToLabelext"
                                    style="@style/TextStyle"
                                    android:text="( Night Stay Location )"
                                    android:textStyle="normal" />
                            </LinearLayout>
                            <RelativeLayout
                                android:id="@+id/card_bus_mode"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/card_to_hq"
                                >


                                <TextView
                                    android:id="@+id/edt_to"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:layout_marginStart="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:paddingBottom="10dp"
                                    android:hint="Select..."
                                    android:textAllCaps="false"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="13sp" />

                            </RelativeLayout>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/CardOthPlc"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/card_to_hq"
                                android:layout_marginTop="6dp"
                                android:background="#B1AFAF"
                                android:padding="18dp"
                                android:visibility="gone"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp"
                                app:cardUseCompatPadding="true">

                                <EditText
                                    android:id="@+id/txtOthPlc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:hint="Enter To Other Place"
                                    android:padding="8dp"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

