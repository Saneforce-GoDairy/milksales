<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SFA_Activity.FeedbackActivitySFA">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/C12dp"
            android:layout_marginTop="@dimen/C16dp"
            android:fontFamily="@font/roboto"
            android:text="1. Is the delivery of the material as per your order?"
            android:textColor="@color/black"
            android:textSize="@dimen/C16dp" />

        <RadioGroup
            android:id="@+id/deliveryGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/C15dp"
            android:layout_marginTop="@dimen/C8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/deliveryYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:checked="true"
                android:text="Yes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/deliveryNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/C20dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="No"
                android:textColor="@color/black" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/C12dp"
            android:layout_marginTop="@dimen/C16dp"
            android:fontFamily="@font/roboto"
            android:text="2. Is there any issue you would like to report?"
            android:textColor="@color/black"
            android:textSize="@dimen/C16dp" />

        <RadioGroup
            android:id="@+id/issueGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/C15dp"
            android:layout_marginTop="@dimen/C8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/issueYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Yes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/issueNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/C20dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:checked="true"
                android:text="No"
                android:textColor="@color/black" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/C12dp"
            android:layout_marginTop="@dimen/C16dp"
            android:fontFamily="@font/roboto"
            android:text="3. Is there any Material Damage / Expired?"
            android:textColor="@color/black"
            android:textSize="@dimen/C16dp" />

        <RadioGroup
            android:id="@+id/damageGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/C15dp"
            android:layout_marginTop="@dimen/C8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/damageYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorPrimaryDark"
                android:text="Yes"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/damageNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/C20dp"
                android:buttonTint="@color/colorPrimaryDark"
                android:checked="true"
                android:text="No"
                android:textColor="@color/black" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/C12dp"
            android:layout_marginTop="@dimen/C16dp"
            android:fontFamily="@font/roboto"
            android:text="4. For any other information/ to share your feedback here"
            android:textColor="@color/black"
            android:textSize="@dimen/C16dp" />

        <EditText
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/C12dp"
            android:background="@drawable/edit_text_border"
            android:gravity="start"
            android:hint="Tell something..."
            android:inputType="textCapSentences|textMultiLine"
            android:minLines="4"
            android:padding="@dimen/C12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/C12dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/cardbutton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="center"
        android:paddingHorizontal="@dimen/C12dp"
        android:paddingVertical="8dp"
        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/C16dp"
        android:textStyle="bold" />

</LinearLayout>