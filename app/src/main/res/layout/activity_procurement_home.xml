<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".procurement.ProcurementHome">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/ubuntu_medium"
        android:text="Procurement form"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/logout"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>

  </RelativeLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"

        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="5dp"
      android:orientation="vertical"
      android:visibility="gone">

    <Button
        android:id="@+id/one_agronomist_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d1d1d1"
        android:text="1, Agronomist Form"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/ait_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#d1d1d1"
        android:text="2, AIT Form"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/veterinary_doctor_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#d1d1d1"
        android:text="3, Veterinary-Doctors Form"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/quality_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#d1d1d1"
        android:text="4, Quality Form"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/maintence_requlation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#d1d1d1"
        android:text="5, Maintanence-Regular Form"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/existing_agent_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#d1d1d1"
        android:text="6, Existing Agent Visit"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/collection_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#d1d1d1"
        android:text="7, Collection Center Location"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/procurement_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#d1d1d1"
        android:text="8, Procurement Asset"
        android:textColor="@color/black" />
  </LinearLayout>

  </LinearLayout>