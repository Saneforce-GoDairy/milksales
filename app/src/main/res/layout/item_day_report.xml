                                android:layout_marginLeft="3dp"
                                android:layout_weight="1.1"
                                android:gravity="center"
                                android:text=""
                                android:hint="05"
                                android:textStyle="bold"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
