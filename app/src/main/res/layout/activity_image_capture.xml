<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Hap.ImageCaptureActivity">

    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn_ios"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/C20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check IN"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/primaryDark"
            android:fontFamily="@font/roboto_medium"
            android:textSize="17sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/C30dp"
        android:layout_marginEnd="@dimen/C30dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/checkin_camera_enabled"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_below="@id/top2"
        android:layout_marginTop="@dimen/C30dp"
        android:layout_marginLeft="@dimen/C20dp"
        android:layout_marginRight="@dimen/C20dp"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="2"
        android:foreground="@drawable/border_gray_box"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/C10dp">

        <androidx.camera.view.PreviewView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/camera_preview"/>

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/C50dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/C70dp"
            android:layout_gravity="bottom"
            android:background="#DDEFF9">

            <RelativeLayout
                android:id="@+id/camera_function_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@id/capture_button">

                    <ImageView
                        android:id="@+id/button_switchCam"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/camera_rotate"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>


                <ImageView
                    android:id="@+id/capture_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/capture_button"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/capture_button">

                    <ImageView
                        android:id="@+id/button_flash"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/camera_flash"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <SeekBar
            android:id="@+id/skBarBright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="@dimen/C20dp"
            android:maxHeight="11dp"
            android:progressDrawable="@drawable/seekbar_style"
            android:thumb="@drawable/seekbar_custom_thumb"
            android:min="0"
            android:progress="50"
            />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/confirm_shift"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/C20dp"
        android:layout_marginEnd="@dimen/C20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/C20dp"
        android:background="@drawable/button_blue1"
        android:text="FINISH" />

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/flip_camera_w"
                app:tint="@color/colorPrimaryDark" />

            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_baseline_offline_bolt_24"
                app:tint="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/button_WBalance"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_brightness"
                app:tint="@color/colorPrimaryDark" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/ic_baseline_brightness_2_24" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:src="@drawable/ic_brightness"
                app:tint="#FF9800" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/C50dp"
                android:background="@color/grey_100"
                android:orientation="horizontal"
                android:padding="0dp"
                android:weightSum="1">

                <Button
                    android:id="@+id/button_capture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="0dp"
                    android:background="@color/colorPrimaryDark"
                    android:padding="2dp"
                    android:text="Photo"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/lstMFlash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/awhite"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B91C1C1C"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:text="Flash Mode Selection"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:src="@drawable/close_btn" />

            </LinearLayout>

            <ListView
                android:id="@+id/lstFlashMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lstMWBalance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/awhite"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B91C1C1C"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:text="White Balance Mode Selection"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:src="@drawable/close_btn" />

            </LinearLayout>

            <ListView
                android:id="@+id/lstWBalance"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>

        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/C50dp"
                android:layout_alignParentBottom="true"
                android:background="#ffffff"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRtPrv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginRight="@dimen/C10dp"
                    android:layout_marginBottom="@dimen/C5dp"
                    android:background="@drawable/button_red"
                    android:padding="@dimen/C10dp"
                    android:text="Retry"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></Space>

                <Button
                    android:id="@+id/btnOkPrv"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/C10dp"
                    android:layout_marginTop="@dimen/C5dp"
                    android:layout_marginRight="@dimen/C10dp"
                    android:layout_marginBottom="@dimen/C5dp"
                    android:background="@drawable/button_green"
                    android:padding="@dimen/C10dp"
                    android:text="Ok"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />
            </LinearLayout>
    </RelativeLayout>

</RelativeLayout>