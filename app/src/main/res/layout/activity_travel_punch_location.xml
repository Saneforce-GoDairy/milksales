<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TravelPunchLocationActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/address"
        android:layout_below="@id/toolbar"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/refreshLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:background="@drawable/button_white_bg"
        android:elevation="5dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="Refresh Location"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/remarksTitle"
        android:layout_marginHorizontal="12dp"
        android:textSize="13sp"
        android:background="@drawable/form_bg"
        android:hint="Loading Address"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp" />

    <TextView
        android:id="@+id/remarksTitle"
        style="@style/myFormTitle"
        android:layout_above="@id/enterRemarks"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="15dp"
        android:textColor="#757575"
        android:text="Remarks (Purpose of Visit)" />

    <EditText
        android:id="@+id/enterRemarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/punchLocation"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/form_bg"
        android:gravity="start"
        android:hint="Enter Remarks"
        android:lines="3"
        android:minLines="3"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/punchLocation"
        style="@style/formButton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:text="Punch Location" />

</RelativeLayout>