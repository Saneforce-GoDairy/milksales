<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Hap.Day_Report_Activity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/my_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/date_curve_light_blue"
            android:drawablePadding="12dp"
            android:drawableTint="#494949"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="Jan 2024"
            android:textColor="#494949"
            android:textSize="13sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/sfa_calendar" />


        <TextView
            android:id="@+id/selectFieldForce"
            style="@style/myFormDropdown"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"
            android:hint="My Team" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="45dp"
            tools:itemCount="3"
            tools:listitem="@layout/item_day_report" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/summary_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@drawable/ellipse_summary">


        <ImageView
            android:id="@+id/iv_up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/C3dp"
            android:background="@drawable/three_up_arrow">

        </ImageView>

        <TextView
            android:id="@+id/tv_view_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_up_arrow"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="@dimen/C15dp"
            android:paddingEnd="@dimen/C15dp"
            android:text="View Summary"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>