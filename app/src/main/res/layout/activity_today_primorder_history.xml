<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SFA_Activity.Dashboard_Route">

    <LinearLayout
        android:id="@+id/db1_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/sfatoolbar"/>


        <TextView
            android:id="@+id/headtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:fontFamily="@font/basic"
            android:padding="@dimen/C8dp"
            android:text="@string/primary_order_history"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/C5dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_distributer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/txt_distributor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/basic"
                        android:hint="@string/select_franchise"
                        android:paddingEnd="@dimen/C5dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="13sp"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:id="@+id/ivDistSpinner"
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:layout_gravity="center"
                        android:src="@drawable/spin_down_arrow"
                        app:tint="@color/black"
                        android:contentDescription="@string/todo">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_cmb_route"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/txt_route"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/select_the_route"
                        android:paddingEnd="@dimen/C5dp"
                        android:paddingStart="@dimen/C5dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="9sp"
                        tools:ignore="SmallSp" />

                    <ImageView
                        android:id="@+id/ivRouteSpinner"
                        android:layout_width="@dimen/C7dp"
                        android:layout_height="@dimen/C7dp"
                        android:layout_gravity="center"
                        android:src="@drawable/spin_down_arrow"
                        app:tint="@color/black"
                        android:contentDescription="@string/todo">

                    </ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCustomDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvStartDate"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_bg"
                    android:elevation="5dp"
                    android:hint="@string/select_start_date"
                    android:padding="@dimen/C8dp"
                    app:drawableRightCompat="@drawable/ic_baseline_date_range_24"
                    app:drawableTint="@color/colorPrimaryDark" />


                <TextView
                    android:id="@+id/tvEndDate"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/textbox_bg"
                    android:elevation="5dp"
                    android:hint="@string/select_end_date"
                    android:padding="@dimen/C8dp"
                    app:drawableRightCompat="@drawable/ic_baseline_date_range_24"
                    app:drawableTint="@color/colorPrimaryDark" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvPrimOrdFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C5dp"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/C5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_primary_order_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/C5dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/row_report"
                android:layout_width="match_parent"
                android:layout_height="@dimen/C40dp"
                android:background="@drawable/blue_bg">


                <TextView
                    android:id="@+id/txt_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/sno"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/invoice_id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/C14dp"
                    tools:ignore="SpUsage" />


                <TextView
                    android:id="@+id/Itemcount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/status"
                    android:textColor="@color/white"
                    android:textSize="@dimen/C14dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:text="@string/value"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_invoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cvTotParent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/C10dp"
                app:cardCornerRadius="@dimen/C5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/C45dp"
                    android:padding="@dimen/C5dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/total"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_grand_total"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:text="0.00"
                        android:textColor="@color/color_red"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="@dimen/C10dp">

                <RelativeLayout
                    android:id="@+id/order_button"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/button_blue1"
                    android:paddingStart="@dimen/C10dp"
                    android:paddingEnd="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/order"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/no_order"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/button_blue1"
                    android:paddingStart="@dimen/C10dp"
                    android:layout_marginStart="10dp"
                    android:paddingEnd="10dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/ubuntu"
                        android:text="@string/no_order"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>