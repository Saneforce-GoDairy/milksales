<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TodayFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_marginHorizontal="@dimen/C15dp"
        android:background="@drawable/fragment_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/C15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Date"
                    android:textColor="#737779"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/primaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Check IN time"
                    android:textColor="#737779"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_in_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/C10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Check OUT time"
                    android:textColor="#737779"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/check_out_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primaryDark"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/C15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Shift time"
                    android:textColor="#737779"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/shift_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/primaryDark"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/geoInView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Geo IN"
                        android:textColor="#737779"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/view_arrow" />

                    <TextView
                        android:id="@+id/view_geo_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/C5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="View"
                        android:textColor="@color/primaryBlurLight"
                        android:textSize="15sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/geo_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:textColor="@color/primaryDark"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/geoOutView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Geo OUT"
                        android:textColor="#737779"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/view_arrow" />

                    <TextView
                        android:id="@+id/view_geo_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:textSize="15sp"
                        android:layout_marginStart="@dimen/C5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/primaryBlurLight" />

                </LinearLayout>

                <TextView
                    android:id="@+id/geo_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:text="-"
                    android:textColor="@color/primaryDark"
                    android:textSize="15sp" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="@dimen/C40dp"
            android:layout_height="@dimen/C40dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/C15dp"
            android:layout_marginTop="@dimen/C15dp"
            android:layout_marginEnd="@dimen/C15dp"
            android:layout_marginBottom="@dimen/C15dp"
            android:src="@drawable/person_placeholder_0" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:paddingBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Status:"
                android:textColor="#737779"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/roboto_medium"
                android:text=""
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>