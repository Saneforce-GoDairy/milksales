<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TodayFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/C15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/C15dp"
                android:paddingStart="@dimen/C15dp"
                android:paddingEnd="@dimen/C15dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textStyle="bold"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/shift_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:hint=""
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey_600"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:src="@drawable/ic_late"/>

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/roboto_medium"
                            android:text=""
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IN Time"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="15sp"
                            android:textColor="@color/grey_600"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginEnd="0dp"
                                    app:srcCompat="@drawable/circle_bg_primary" />

                                <ImageView
                                    android:id="@+id/check_in_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="1dp"
                                    android:src="@drawable/person_placeholder_0" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/check_in_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginTop="13dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:src="@drawable/ic_map_marker"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="5dp"/>

                            <TextView
                                android:id="@+id/view_geo_in"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:text="View"
                                android:textSize="14sp"
                                android:textColor="#1997CE"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/C10dp"
                        android:layout_alignParentEnd="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OUT Time"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="15sp"
                            android:textColor="@color/grey_600"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="10dp">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:layout_marginEnd="0dp"
                                    app:srcCompat="@drawable/circle_bg_primary" />

                                <ImageView
                                    android:id="@+id/check_out_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:padding="1dp"
                                    android:src="@drawable/person_placeholder_0" />
                            </RelativeLayout>
                            <TextView
                                android:id="@+id/check_out_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:layout_marginTop="13dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:src="@drawable/ic_map_marker"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="5dp"/>

                            <TextView
                                android:id="@+id/view_geo_out"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="5dp"
                                android:text="View"
                                android:textSize="14sp"
                                android:textColor="#1997CE"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_medium"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/C60dp">
                    <SeekBar
                        android:id="@+id/seek_bar_change_brightness"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="5dp"
                        android:maxHeight="11dp"
                        android:progressDrawable="@drawable/seekbar_style"
                        android:thumb="@drawable/seekbar_custom_thumb"
                        android:min="0"
                        android:progress="0" />
                </RelativeLayout>
            </LinearLayout>




