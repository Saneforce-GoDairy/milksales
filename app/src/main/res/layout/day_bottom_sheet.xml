<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:padding="@dimen/C12dp"
    android:background="@drawable/rounded_dialog_top_right_left"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/C10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_view_summery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:text="View Summary"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="@dimen/C15dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_view_summery"
            android:src="@drawable/ic_double_arrow_down"

            >

        </ImageView>

    </RelativeLayout>



        <LinearLayout
            android:id="@+id/row_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/C20dp"
            android:background="@drawable/border_gray_box"
            android:orientation="vertical"
            android:layout_margin="@dimen/C4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"

                android:elevation="@dimen/C10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:paddingTop="@dimen/C5dp"
                    android:layout_marginStart="@dimen/C5dp"
                    android:text="Count"
                    android:textColor="@color/grey"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/C5dp"
                    android:text="Distributor"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:text="Outlets"
                    android:paddingTop="@dimen/C5dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"
                android:elevation="@dimen/C10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Visited"
                    android:layout_marginStart="@dimen/C5dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/visited_distributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="05"
                    android:text="05"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/visited_outlet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:hint="05"
                    android:text="05"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="3"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:elevation="@dimen/C10dp"
                android:background="#8E8989"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Order Taken"
                    android:layout_marginStart="@dimen/C5dp"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="05"
                    android:text="05"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:hint="05"
                    android:text="05"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginBottom="5dp"
                android:elevation="@dimen/C10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Invoiced"
                    android:layout_marginStart="@dimen/C5dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/count_distributor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="05"
                    android:hint="05"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/count_outlet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:text="05"
                    android:hint="05"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="13sp" />
            </LinearLayout>

