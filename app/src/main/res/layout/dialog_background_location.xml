<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="15dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:text="Background Location"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_descript1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="SAN SALES APP Collects Location data to enable idendification of near by outlets even when the app is closed or not in use."
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_descript2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_descript1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="1. Set this app's location permission to Always Allow."
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_descript3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_descript2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="2. Set this app's battery to Not Optimise."
        android:textColor="@color/black"/>

    <CheckBox
        android:id="@+id/cb_dont_show"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_descript3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_descript3"
        app:layout_constraintStart_toEndOf="@+id/cb_dont_show"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="I see, don't show this again."
        android:textColor="@color/black"/>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/cb_dont_show"
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_confirm"
        android:background="@android:color/transparent"
        android:textColor="@color/colorAccent"/>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/cb_dont_show"
        android:id="@+id/btn_confirm"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:textColor="@color/colorAccent"/>


</androidx.constraintlayout.widget.ConstraintLayout>