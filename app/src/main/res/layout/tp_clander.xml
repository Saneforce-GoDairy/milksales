<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white">

    <include
        android:visibility="invisible"
        layout="@layout/custom_toolbar_help" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <RelativeLayout

            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/imag_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_btn_ios"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/C20dp"/>

            <TextView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Plan"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/primaryDark"
                android:fontFamily="@font/roboto_medium"
                android:textSize="17sp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/header2"
            android:layout_below="@id/top1"
            android:layout_marginTop="@dimen/C10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/C50dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/C20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:maxLength="3"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:id="@+id/year_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:text="2023"
                        android:layout_marginStart="5dp"
                        android:textColor="#272829"
                        android:fontFamily="@font/roboto"
                        android:visibility="visible"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/C20dp"
                android:layout_marginEnd="@dimen/C20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/current_month_btn1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="@dimen/C20dp">

                    <ImageView
                        android:id="@+id/current_month_arrow_img"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/monthly_back_arrow_white"
                        app:tint="#979797"
                        android:scaleX="-1"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/next_month_btn1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/custom_back_btn"
                    >

                    <ImageView
                        android:id="@+id/next_month_arrow_img"
                        android:layout_height="20dp"
                        android:layout_width="20dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/tp_current_month_enabled_arrow"
                        android:scaleX="-1"
                        app:tint="@color/white" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/C100dp">

            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/view_pager"
                android:layout_below="@id/tab_layout"/>

        </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:visibility="gone"
            android:padding="@dimen/C7dp"
            android:background="@drawable/button_blueg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="November"
            android:textAlignment="center"
            android:textColor="@color/color_white"
            android:textSize="18dip"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:weightSum="7">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sun"
                android:textColor="#000"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mon"
                android:textColor="#000"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tue"
                android:textColor="#000"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="wed"
                android:textColor="#000"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thu"
                android:textColor="#000"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fri"
                android:textColor="#000"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Sat"
                android:textColor="#000"
                android:fontFamily="@font/roboto_medium"
                android:textStyle="bold"/>


        </LinearLayout>

        <GridView
            android:id="@+id/gridcalander"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="7"
            android:stretchMode="columnWidth" />
    </LinearLayout>

    <TextView
        android:id="@+id/num_events_per_day"
        android:layout_width="10dip"
        android:layout_height="10dip"
        android:layout_gravity="right"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"></TextView>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_color"
        android:orientation="horizontal"
        android:padding="3dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/C5dp"
            android:paddingLeft="@dimen/C8dp"
            android:paddingRight="@dimen/C8dp"
            android:src="@drawable/back_arrow"/>

        <Button
            android:id="@+id/btnsubmit"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/C15dp"
            android:background="@drawable/button_blueg"
            android:text="Save"
            android:textColor="@color/color_white" />

    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>